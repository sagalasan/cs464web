{{>navbar}}

<div class="container-fluid">
    <div class="container">
        <h1>Transactions</h1>
        <p>These are the last 100 transactions</p>
        <table class="table table-bordered table-condensed">
            <tr>
                <th>Item ID</th>
                <th>Client ID</th>
                <th>Employee ID</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Order type</th>
            </tr>
            {{#transactions}}
                <tr>
                    <td><a href="/item?id={{item_id}}">{{item_id}}</a></td>
                    <td><a href="/client?id={{client_id}}">{{client_id}}</a></td>
                    <td><a href="/employee?id={{employee_id}}">{{employee_id}}</a></td>
                    <td>{{date}}</td>
                    <td>{{quantity}}</td>
                    <td>{{price}}</td>
                    <td>{{order_type}}</td>
                </tr>
            {{/transactions}}
        </table>
    </div>
</div>

