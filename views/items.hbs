{{>navbar}}

<div class="container-fluid">
    <div class="container">
        <h1>Items</h1>
        <table class="table table-bordered table-condensed">
            <tr>
                <th>Item ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
            {{#items}}
                <tr>
                    <td><a href="/item?id={{item_id}}">{{item_id}}</a></td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>${{price}}</td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Delete"><a href="/items/delete/{{item_id}}"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></a></p></td>
                </tr>
            {{/items}}
        </table>
    </div>
</div>

{{>footer}}